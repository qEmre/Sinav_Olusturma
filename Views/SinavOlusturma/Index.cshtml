@model Sinav

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <title>Sınav Sayfası</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            max-width: 900px;
            margin: 0 auto;
        }

        .content-container {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 800px;
            padding: 20px;
            text-align: left;
        }

        input[type="text"],
        textarea {
            width: calc(100% - 16px);
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
            border: 1px solid black;
        }

        .button {
            background-color: green;
            color: #fff;
            padding: 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 20px;
            margin-left: 220px;
            width: 250px;
            
        }

        button:hover {
            background-color: limegreen;
        }
    </style>
</head>
<body>

    <form method="post" action="/SinavOlusturma/Create">
        <div class="content-container">
            <h4>Yazı</h4>

            <label for="HaberBasligi"></label>
            <textarea id="Baslik" name="Baslik" rows="1" cols="50">@ViewBag.Title</textarea>

            <label for="Aciklama"></label>
            <textarea id="Aciklama" name="Aciklama" rows="5" cols="50">@ViewBag.Description</textarea>

            <br>
            <br>
            <br>
            @for (int i = 0; i < 4; i++)
            {
                <input type="text" id="soru@(i+1)" name="Sorular[@i].soruMetni" placeholder="Soru metni" required>
                <br>

                <input type="text" id="soru@(i+1)SecenekA" name="Sorular[@i].secenekA" placeholder="Seçenek A" required>

                <input type="text" id="soru@(i+1)SecenekB" name="Sorular[@i].secenekB" placeholder="Seçenek B" required>

                <input type="text" id="soru@(i+1)SecenekC" name="Sorular[@i].secenekC" placeholder="Seçenek C" required>

                <input type="text" id="soru@(i+1)SecenekD" name="Sorular[@i].secenekD" placeholder="Seçenek D" required>
                <br>

                <div>
                    <label for="soru@(i+1)DogruSecenek">Doğru Seçenek:</label>
                    <select id="soru@(i+1)DogruSecenek" name="Sorular[@i].dogruCevap" required>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>
                <br>
                <br>
            }
            <button type="submit" class="button">Sınav Oluştur</button>
            <div id="bildirim" style="margin-top: 20px;"></div>
        </div>
    </form>
</body>
</html>
